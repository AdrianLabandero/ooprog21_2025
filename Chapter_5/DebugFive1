import java.util.Scanner;

public class DebugFive1 {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        final double HIGH_PRICE = 2.59;
        final double MED_PRICE = 1.99;
        final double LOW_PRICE = 0.89;

        int usersChoice;
        double bill = 0.0;

        System.out.print("Order please:\n1 - Burger\n2 - Hotdog\n3 - Grilled cheese\n4 - Fish sandwich >> ");
        usersChoice = scan.nextInt();

        if (usersChoice == 1 || usersChoice == 2) {
            bill = bill + HIGH_PRICE;
        } else if (usersChoice == 3 || usersChoice == 4) {
            bill = bill + MED_PRICE;
        } else if (usersChoice == 5) {
            bill = bill + LOW_PRICE;
        } else {
            System.out.println("Invalid choice. Defaulting to $0.00");
        }

        System.out.print("Fries with that? 1 - Yes 2 - No >> ");
        usersChoice = scan.nextInt();

        if (usersChoice == 1) {
            bill = bill + LOW_PRICE;
        }

        System.out.println("Total bill is $" + bill);
    }
}
